<section class="form bg-grey">
  <div class="form__card">
    <div class="form__col left">
      <div class="title">The first 7 days study <span class = "color-green"> for free</span></div>
      <div class="form__description">The starting course lasts 3 months. Study for a week for free to try. Then 3500 rubles per month at the basic rate.</div>
    </div>
    <div class="form__col right">
      <form class="order-form" name="order-form" id="order-form" novalidate>
        <div class="form-row">
          <div class="form-group form-col-2">
            <label class="label">
              <input type="text" class="input" id="name" name="name" placeholder="Name">
            </label>
            <div class="form-error-text" id="error-name"></div>
          </div>
          <div class="form-group form-col-2">
            <label class="label">
              <input type="email" class="input" id="email" name="email" placeholder="Email">
            </label>
            <div class="form-error-text" id="error-email"></div>
          </div>
        </div>
        <div class="form-with-btn-row">
          <div class="checkbox-wrap">
            <div class="form-group">
              <input type="checkbox" class="checkbox" id="checkbox" name="checkbox">
              <label class="checkbox-label" for="checkbox">
                I agree with
                <a href="#" target="_blank" rel="noopener noreferrer"> offer agreement </a>
                and
                <a href="#" target="_blank" rel="noopener noreferrer"> privacy policy </a>
              </label>
            </div>
            <div class="form-error-text" id="error-checkbox"></div>
          </div>
          <button type="submit" class="form__btn">Get Started Free Now</button>
        </div>
      </form>
{#      <img src="/static/img/general/order-img.png" alt="">#}
    </div>
  </div>
  <div class="form__additional-plus js-rotate"></div>
  <div class="form__additional-circle-yellow"></div>
</section>
